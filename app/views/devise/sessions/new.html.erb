<div data-controller="sessions" class="sessions-controller justify-content-md-center">
  <div class="text-center sessions-controller-container col-lg-6">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <%= f.label :email, class: 'sr-only' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>

      <%= f.label :password, class: 'sr-only' %><br />
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox mb-3">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
        </div>
      <% end -%>

      <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>
  </div>
</div>
